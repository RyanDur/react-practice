{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "target": "es5",
    "sourceMap": true,
    "lib": [
      "es7",
      "dom",
      "es2017.object"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/**/*",
    "node_modules/@types/puppeteer/index.d.ts"
  ]
}
